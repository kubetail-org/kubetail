<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="{{ pathJoin .config.BasePath "favicon.ico" }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kubetail | Log Viewer</title>
    <script>
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
      window.runtimeConfig = {{ .runtimeConfig }};
    </script>
    {{- $index := (index .manifest "index.html") }}    
    <script type="module" crossorigin src="{{ pathJoin $.config.BasePath $index.file }}"></script>
    {{- range $importRef := $index.imports }}
    {{- $import := index $.manifest $importRef }}
    <link rel="modulepreload" crossorigin href="{{ pathJoin $.config.BasePath $import.file }}">
    {{- end }}
    {{- range $css := $index.css }}
    <link rel="stylesheet" crossorigin href="{{ pathJoin $.config.BasePath $css }}">
    {{- end }}
  </head>
  <body>
    <div id="root"></div>
  </body>
</html>
