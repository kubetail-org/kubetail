FROM golang:1.22.3 AS builder

WORKDIR /agent

# install dependencies (for cache)
COPY backend/agent/go.mod .
#COPY backend/agent/go.sum .
RUN go mod download

# copy code
COPY backend/agent .

# build agent
RUN CGO_ENABLED=0 go build -o agent main.go

ENTRYPOINT ["./agent"]
CMD []
