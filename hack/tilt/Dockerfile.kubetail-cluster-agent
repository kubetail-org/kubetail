FROM rust:1.88 as builder

WORKDIR /work

RUN apt-get update && apt-get install -yq protobuf-compiler

# Install Rust dependencies (for cache)
COPY crates/ ./crates
COPY proto/ ./proto
RUN cd crates && cargo fetch --target x86_64-unknown-linux-musl

RUN rustup target add x86_64-unknown-linux-musl

# Build
RUN cd crates && cargo build --release --target x86_64-unknown-linux-musl

FROM rust:1.88-alpine

WORKDIR /cluster-agent

COPY --from=builder /work/crates/target/release/cluster_agent cluster-agent

ENTRYPOINT ["./cluster-agent"]
CMD []
