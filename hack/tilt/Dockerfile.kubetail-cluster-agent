FROM rust:1.88-slim

WORKDIR /work

RUN apt-get update && apt-get install -yq protobuf-compiler

# Install Rust dependencies (for cache)
COPY crates/ ./crates
COPY proto/ ./proto
RUN cd crates && cargo fetch

# Build
RUN cd crates && cargo build --release

WORKDIR /cluster-agent

RUN mv /work/crates/target/release/cluster_agent cluster-agent
RUN rm -rf /work

ENTRYPOINT ["./cluster-agent"]
CMD []
